{
  "project_name": "Spencer Green Hotel Batu - HMS",
  "design_philosophy": {
    "identity": "E1: The Anti-AI Designer",
    "core_principles": [
      "Fusion over Imitation: Mix Luxury Heritage with Modern Tech",
      "Emotion First: Serenity, Exclusivity, Trust",
      "Content is King: Every page is a cinematic scene",
      "Negative Space: Generous breathing room (2-3x standard)",
      "Contrast: Emerald depth vs. Crisp White"
    ],
    "anti_patterns": [
      "No generic Bootstrap grids",
      "No 'Inter' font for headings",
      "No gradient overload",
      "No center-everything layouts"
    ]
  },
  "typography": {
    "font_family": {
      "headings": "Playfair Display, serif",
      "body": "Manrope, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "usage_rules": {
      "headings": "Use Playfair Display for all H1-H3. Font weights: Light (300) or Black (900). Letter-spacing: tight.",
      "body": "Use Manrope for UI text, descriptions. High readability.",
      "overline": "Uppercase, tracking-widest (0.2em), text-xs, font-bold."
    },
    "installation": "Import via Google Fonts in index.css: @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap');"
  },
