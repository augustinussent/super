  "layout_strategies": {
    "public_marketing": {
      "grid_mode": "Mode A: The Tetris Grid",
      "spacing": "Generous (p-12 to p-24)",
      "container": "max-w-7xl mx-auto px-4 sm:px-6 lg:px-8"
    },
    "admin_dashboard": {
      "grid_mode": "Mode B: The Control Room",
      "spacing": "Compact (p-6)",
      "structure": "Sidebar (Fixed) + Topbar + Main Content Area"
    }
  },
  "components": {
    "GlobalHeader": {
      "style": "Fixed, Glassmorphism. Logo left, Hamburger Menu right.",
      "behavior": "Disappears on scroll down, Reappears on scroll up (Headroom style).",
      "menu_items": ["Home", "Kamar", "Meeting", "Wedding", "Fasilitas", "Gallery", "Cek Reservasi"]
    },
    "GlobalFooter": {
      "style": "Dark Emerald (primary-950). Massive padding (py-20).",
      "content": "Logo, Social Icons (TikTok, IG, FB, WA), Address, Copyright."
    },
    "BookingEngine": {
      "position": "Overlapping Hero Image (bottom center).",
      "style": "Horizontal bar on Desktop, Stacked on Mobile. White background, heavy shadow.",
      "fields": ["Check-in Date", "Check-out Date", "Guests", "Search Button"],
      "mobile_behavior": "Hidden on mobile view as per requirements."
    },
    "Gallery": {
      "style": "TikTok Style Vertical Scroll.",
      "css_rules": "h-screen overflow-y-scroll snap-y snap-mandatory. Each item: h-screen w-full snap-start object-cover.",
      "interaction": "Swipe up/down to view next image/video."
    },
    "RoomCard": {
      "style": "Minimalist. Large image aspect-video. Title and Price below. 'View Detail' button.",
      "hover": "Image zoom (scale-105) transition-transform duration-700."
    }
